           WHEN 1
               DISPLAY "Registrar nueva hipoteca"
               PERFORM 0230-NEW-HIPOTECA
               PERFORM 0210-HIPOTECAS

           WHEN 2
               DISPLAY "CONSULTAR HIPOTECA"
               PERFORM 0240-CONSULT-DEUDA
               PERFORM 0210-HIPOTECAS

           WHEN 3
               DISPLAY "Realizar pago"
               PERFORM 0250-REALIZA-PAGO
               PERFORM 0210-HIPOTECAS

           WHEN 4
